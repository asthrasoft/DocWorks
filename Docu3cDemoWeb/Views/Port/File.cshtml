@using Microsoft.AspNetCore.Html;
@using System.Data;
@{
    ViewData["Title"] = "Home Page";
}
    <div class="text-center1">
        <a class="btn btn-primary float-right ml-2" role="button" href="/port/@(ViewBag.pID)/files">Close</a>
        <a class="btn btn-primary float-right ml-2" role="button" href="/delete/@(ViewBag.pID)/@(ViewBag.fID)">Delete</a>
        <a class="btn btn-primary float-right ml-2" role="button" href="/comply/@(ViewBag.pID)/@(ViewBag.fID)">Comply</a>
        <a class="btn btn-primary float-right ml-2" role="button" href="/identify/@(ViewBag.pID)/@(ViewBag.fID)">Classify</a>
        <h3 class="pl-3">Document Analysis</h3>
    </div>

    <div class="container">
        @ViewBag._file
        <div class="row">
            <div class="col-6">
                <embed src="@ViewBag._file" type="application/pdf" width="100%" height="600px" />
            </div>
            <div class="col-6">
                @( new HtmlString(ViewBag._html))
            </div>
        </div>
    </div>